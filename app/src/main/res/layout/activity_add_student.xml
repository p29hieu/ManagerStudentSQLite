<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.AddStudent.AddStudentActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/linearLayoutId"
        >

      <TextView
          android:text="Ma so sinh vien"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="MSSV"
          android:ems="10"
          android:id="@+id/et_add_id"
          />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/linearLayoutName"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutId"
        >

      <TextView
          android:text="Ho va ten"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="Ho ten"
          android:ems="10"
          android:id="@+id/et_add_name"
          />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/linearLayoutAddress"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutName"
        >

      <TextView
          android:text="Dia chi"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="Dia chi"
          android:ems="10"
          android:id="@+id/et_add_address"
          />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/linearLayoutDob"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutAddress"
        >

      <TextView
          android:text="Ngay sinh"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.google.android.material.textfield.TextInputEditText
          android:calendarViewShown="false"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="Ngay sinh"
          android:ems="10"
          android:id="@+id/et_add_dob"
          />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:id="@+id/linearLayoutEmail"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDob"
        >

      <TextView
          android:text="Email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:hint="Email"
          android:ems="10"
          android:id="@+id/et_add_email"
          />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_add"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
